@model BookingHotel.Models.Booking

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<div class="pagetitle">
    <h1>Booking</h1>
    <nav>
        <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Bookings" asp-action="Index">Booking</a></li>
        <li class="breadcrumb-item active">Edit</li>
        </ol>
    </nav>
</div><!-- End Breadcrumbs with a page title -->
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="BookingId" />
    <div class="row mb-3" >
        <label for="inputText" class="col-sm-2 col-form-label">Tên khách hàng</label>
        <div class="col-sm-10">
        <input type="text" class="form-control" asp-for="CustomerName">
        <span class="badge border-danger border-1 text-danger">@Html.ValidationMessageFor(model => model.CustomerName)</span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputEmail" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
        <input type="text" class="form-control"asp-for="CustomerEmail">
        <span class="badge border-danger border-1 text-danger">@Html.ValidationMessageFor(model => model.CustomerEmail)</span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputPassword" class="col-sm-2 col-form-label">Số điện thoại</label>
        <div class="col-sm-10">
        <input type="text" class="form-control" asp-for="CustomerPhone">
        <span class="badge border-danger border-1 text-danger">@Html.ValidationMessageFor(model => model.CustomerPhone)</span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputDate" class="col-sm-2 col-form-label">Ngày nhận phòng</label>
        <div class="col-sm-10">
        <input type="date" class="form-control" asp-for="BookingStartDate">
        </div>
        <span class="badge border-danger border-1 text-danger">@Html.ValidationMessageFor(model => model.BookingStartDate)</span>
    </div>
    <div class="row mb-3">
        <label for="inputDate" class="col-sm-2 col-form-label">Ngày trả phòng</label>
        <div class="col-sm-10">
        <input type="date" class="form-control" asp-for="BookingEndDate">
        </div>
        <span class="badge border-danger border-1 text-danger">@Html.ValidationMessageFor(model => model.BookingEndDate)</span>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Phòng</label>
        <div class="col-sm-10">
        <select class="form-select" asp-for="RoomId" aria-label="Default select example" asp-items="ViewBag.Phong" >
            <option disabled selected value="0">Phòng</option>
        </select>
        <span class="badge border-danger border-1 text-danger">@Html.ValidationMessageFor(model => model.RoomId)</span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Phương thức thanh toán</label>
        <div class="col-sm-10">
        <select class="form-select" asp-for="PaymentId" aria-label="Default select example" asp-items="ViewBag.ThanhToan" >
            <option disabled selected value="0">Phương thức thanh toán</option>
        </select>
        <span class="badge border-danger border-1 text-danger">@Html.ValidationMessageFor(model => model.PaymentId)</span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Trạng thái</label>
        <div class="col-sm-10">
        <select class="form-select" asp-for="StatusId" aria-label="Default select example" asp-items="ViewBag.TrangThai" >
            <option disabled selected value="0">Trạng thái</option>
        </select>
        <span class="badge border-danger border-1 text-danger">@Html.ValidationMessageFor(model => model.StatusId)</span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputPassword" class="col-sm-2 col-form-label">Tổng tiền</label>
        <div class="col-sm-10">
        <input type="number" class="form-control" asp-for="BookingTotalMoney">
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-sm-10">
        <button type="submit" class="btn btn-success rounded-pill">Save</button>
        </div>
    </div>

</form><!-- End General Form Elements -->

