@model PagedList.Core.IPagedList<BookingHotel.Models.Hotel> 
@{
    ViewData["Title"] = "Index" + ViewBag.CurrentPage;
    Layout = "~/Views/Shared/_Layout.cshtml";
    int PageCurrent = ViewBag.CurrentPage;
    int PageNext = PageCurrent + 1;
}

<!-- Breadcrumb Section Begin -->
<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <h2>Khách sạn</h2>
                    <div class="bt-option">
                        <a asp-controller="Home" asp-action="Index">Trang chủ</a>
                        <span>Khách sạn ></span>
                        <a asp-controller="Home" asp-action="Index">Tìm kiếm </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Section End -->

<!-- Blog Section Begin -->
<section class="blog-section blog-page spad">
    <div class="container">
        <div class="row">
            @foreach (var i in Model)
            {
                string url = $"/khach-san/{i.HotelId}.html";
                    <div class="col-lg-4 col-md-6">
                        <div class="room-item">
                            <img src="~/img/blog/@i.HotelImage" alt="">
                            <div class="ri-text">
                                <a href="@url">  
                                    <h4>@i.HotelName</h4>
                                    <h3>@i.HotelPrice.Value.ToString("#,##0") VND<span>/Giá trung bình</span></h3>
                                    <h3><span style="color:black">@i.HotelAddress</span></h3>
                                    <a href="@url" class="primary-btn">@i.HotelPhone</a>
                                </a>
                            </div>
                        </div>
                    </div>
            }
            <div class="col-lg-12">
                <div class="room-pagination">
                    @if (Model.HasPreviousPage)
                    {
                            <a href="/hotel.html?page=@(PageCurrent-1)">Previous <i class="fa fa-long-arrow-left"></i></a>
                    }
                    else
                    {
                            <a href="/hotel.html" style="display:none;">Previous <i class="fa fa-long-arrow-left"></i></a>
                    }
                    @if (Model.HasNextPage)
                    {
                            <a href="/hotel.html?page=@PageNext">Next <i class="fa fa-long-arrow-right"></i></a>
                    }
                    else
                    {
                            <a href="/hotel.html?page=@PageNext" style="display:none;">Next<i class="fa fa-long-arrow-right"></i></a>
                    }
                </div>
            </div>
        </div>               
    </div>
</section>
<!-- Blog Section End -->



