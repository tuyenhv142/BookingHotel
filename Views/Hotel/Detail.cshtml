@using System.Text.RegularExpressions;
@model BookingHotel.Models.Hotel
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string url = $"/khach-san/{Model.HotelId}.html";
    List<Room> lsRoom = ViewBag.lsRoom;
    List<Hotel> lsHotel = ViewBag.lshotel;
}

 <!-- Breadcrumb Section Begin -->
<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <h2>Thông tin chi tiết</h2>
                    <div class="bt-option">
                        <a asp-controller="Home" asp-action="Index">Trang chủ</a>
                        <a asp-controller="Hotel" asp-action="Index">Khách sạn</a>
                        <span>Thông tin chi tiết</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Section End -->

<!-- Room Details Section Begin -->
<section class="room-details-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="room-details-item">
                    <img src="~/img/hero/@Model.HotelMoreImage" alt="">
                    <div class="rd-text">
                        <div class="rd-title">
                            <h3>@Model.HotelName</h3>
                            <div class="rdt-right">
                            @if (Model.HotelType == "5 sao")
                            {
                                <div class="rating">
                                    <i class="icon_star"></i>
                                    <i class="icon_star"></i>
                                    <i class="icon_star"></i>
                                    <i class="icon_star"></i>
                                    <i class="icon_star"></i>
                                </div>
                            }
                            else if (Model.HotelType == "4 sao")
                            {
                                <div class="rating">
                                    <i class="icon_star"></i>
                                    <i class="icon_star"></i>
                                    <i class="icon_star"></i>
                                    <i class="icon_star"></i>
                                </div>
                            }
                            else if (Model.HotelType == "3 sao")
                            {
                                <div class="rating">
                                    <i class="icon_star"></i>
                                    <i class="icon_star"></i>
                                    <i class="icon_star"></i>
                                </div>
                            }
                            else if (Model.HotelType == "2 sao")
                            {
                                <div class="rating">
                                    <i class="icon_star"></i>
                                    <i class="icon_star"></i>
                                </div>
                            }
                            else
                            {
                                <div class="rating">
                                    <i class="icon_star"></i>
                                </div>
                            }
                            <a href="#">Booking Now</a>
                            </div>
                        </div>
                        @*<h2>@hotelPrice<span>/Đêm</span></h2>*@
                        <p class="f-para">@Model.HotelDescription</p>
                        <p>Nếu bạn có bất kỳ thắc mắc nào về dịch vụ đặt phòng khách sạn @Model.HotelName, vui lòng liên hệ số hotline 0372981353 để được tư vấn và hỗ trợ nhanh nhất.
                        </p>
                    </div>
                </div>
                <!-- Rooms Section Begin -->
                <section class="rooms-section spad">
                    <div class="container">
                        <div class="row">
                            @foreach (var i in lsRoom)
                            {
                                string url1 = $"/dat-phong/phong-{i.RoomId}.html";
                                <div class="col-lg-6 col-md-6">
                                    <div class="room-item">
                                        <img src="~/img/room/@i.RoomImage" alt="" >
                                        <div class="ri-text">
                                            <h4>@i.RoomName</h4>
                                            <h3>@i.RoomPrice.Value.ToString("#,##0") VND<span>/Đêm</span></h3>
                                            <table>
                                                <tbody>
                                                    <tr>
                                                        <td class="r-o">Diện tích:</td>
                                                        <td>@i.RoomSize m2</td>
                                                    </tr>
                                                    <tr>
                                                        <td class="r-o">Giường:</td>
                                                        <td>@i.RoomBed</td>
                                                    </tr>
                                                    <tr>
                                                        <td class="r-o">Tiện ích:</td>
                                                        <td>@i.RoomUtilities</td>
                                                    </tr>
                                                    <tr>
                                                        <td class="r-o">Dịch vụ :</td>
                                                        <td>@i.RoomService</td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                            <a href="@url1" class="primary-btn" >Đặt phòng</a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>
<!-- Room Details Section End -->
<!-- Blog Section Begin -->
<section class="blog-section blog-page spad">
    <div class="container">
        <div class="col-lg-12">
            <div class="section-title">
                <h2>Các khách sạn khác</h2>
            </div>
        </div>
        <div class="row">
            @foreach (var i in lsHotel)
            {
                string url2 = $"/khach-san/{i.HotelId}.html";
                <div class="col-lg-4 col-md-6">
                    <div class="room-item">
                        <img src="~/img/blog/@i.HotelImage" alt="">
                        <div class="ri-text">
                            <a href="@url2">  
                                <h4>@i.HotelName</h4>
                                    <h3>@i.HotelPrice.Value.ToString("#,##0") <span>VND/Giá trung bình</span></h3>
                                <h3><span style="color:black">@i.HotelAddress</span></h3>
                                <a href="@url2" class="primary-btn">Phone : @i.HotelPhone</a>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>               
    </div>
</section>
<!-- Blog Section End -->

