@model PagedList.Core.IPagedList<BookingHotel.Models.Page> 

@{
    ViewData["Title"] = "Index" + ViewBag.CurrentPage;
    Layout = "~/Views/Shared/_Layout.cshtml";
    int PageCurrent = ViewBag.CurrentPage;
    int PageNext = PageCurrent + 1;
}

<!-- Breadcrumb Section Begin -->
    <div class="breadcrumb-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb-text">
                        <h2>Tin Tức</h2>
                        <div class="bt-option">
                            <a asp-controller="Home" asp-action="Index">Trang chủ</a>
                            <span>Tin Tức</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Breadcrumb Section End -->

    <!-- Rooms Section Begin -->
    <section class="rooms-section spad">
        <div class="container">
            <div class="row">
                @foreach(var i in Model)
                {
                    string url = $"/tin-tuc/{i.Id}.html";
                    <div class="col-lg-4 col-md-6">
                        <div class="room-item">
                            <img src="~/img/blog/@i.Image" alt="">
                            <div class="ri-text">
                                <h4>@i.Name</h4>
                                <h3><span>@i.Time</span></h3>
                                <a href="@url" class="primary-btn">Xem thêm</a>
                            </div>
                        </div>
                    </div>
                }
                <div class="col-lg-12">
                    <div class="room-pagination">
                    @if (Model.HasPreviousPage)
                    {
                                <a href="/tintuc.html?page=@(PageCurrent-1)">Previous <i class="fa fa-long-arrow-left"></i></a>
                    }
                    else
                    {
                                <a href="/tintuc.html" style="display:none;">Previous <i class="fa fa-long-arrow-left"></i></a>
                    }
                    @if (Model.HasNextPage)
                    {
                                <a href="/tintuc.html?page=@PageNext">Next <i class="fa fa-long-arrow-right"></i></a>
                    }
                    else
                    {
                                <a href="/tintuc.html?page=@PageNext" style="display:none;">Next<i class="fa fa-long-arrow-right"></i></a>
                    }
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Rooms Section End -->

