<!-- News Section Begin -->
<section class="rooms-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <span>TIN Tức</span>
                    <h2>Tin Tức Mới Nổi Bật</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var i in pages)
            {
                string url = $"/tin-tuc/{i.Id}.html";
                <div class="col-lg-4 col-md-6">
                    <div class="room-item">
                        <img src="~/img/blog/@i.Image" alt="">
                        <div class="ri-text">
                            <h4>@i.Name</h4>
                            <h3><span>@i.Time</span></h3>
                            <a href="@url" class="primary-btn">Xem thêm</a>
                        </div>
                    </div>
                </div>
            }           
        </div>
    </div>
</section>
<!-- News Section End -->



