@model BookingHotel.Models.SupportOnline
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

   <!-- Contact Section Begin -->
    <section class="contact-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-5">
                    <div class="contact-text">
                        <h2>Thông Tin Liên Hệ</h2>
                        <p>Chúng tôi luôn sẵn sàng hỗ trợ, dù bạn ở bất cứ nơi đâu!</p>
                        <table>
                            <tbody>
                                <tr>
                                    <td class="c-o">Address:</td>
                                    <td>TT Chúc Sơn, Chương Mỹ, Hà Nội</td>
                                </tr>
                                <tr>
                                    <td class="c-o">Phone:</td>
                                    <td>0372981353</td>
                                </tr>
                                <tr>
                                    <td class="c-o">Email:</td>
                                    <td>hoangmit202@gmail.com</td>
                                </tr>
                                <tr>
                                    <td class="c-o">Fax:</td>
                                    <td>+ 84 (8) 24567889.</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="col-lg-6 offset-lg-1">
                    <form  class="contact-form" asp-controller="Contact" asp-action="Index" method="post">
                        <div class="row">
                            <div class="col-lg-6">
                                <input type="text" asp-for="Name" placeholder="Your Name" >
                                <span class="badge border-danger border-1 text-danger">@Html.ValidationMessageFor(model => model.Name)</span>
                            </div>
                            <div class="col-lg-6">
                                <input type="email" asp-for="Email" placeholder="Your Email" >
                                <span class="badge border-danger border-1 text-danger">@Html.ValidationMessageFor(model => model.Email)</span>
                            </div>
                            <div class="col-lg-12">
                                <textarea asp-for="Message" placeholder="Your Message" ></textarea>
                                <span class="badge border-danger border-1 text-danger">@Html.ValidationMessageFor(model => model.Message)</span>
                            </div>
                            <button type="submit">Submit Now</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <!-- Contact Section End -->

